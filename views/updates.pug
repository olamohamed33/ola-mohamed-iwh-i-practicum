doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title
  body
    h1= title
    a(href="/") Return to the homepage
    if error
      p(style="color:red")= error
    form(action="/update-cobj" method="post")
      //- Required property 'name' (per practicum)
      div
        label(for="name") Name (required):
        input#name(type="text" name="name" required value=formData?.name)
      div
        label(for="full_name") Full name:
        input#full_name(type="text" name="full_name" value=formData?.full_name)
      div
        label(for="bio") Bio:
        input#bio(type="text" name="bio" value=formData?.bio)
      div
        label(for="other") Other:
        input#other(type="text" name="other" value=formData?.other)
      div
        label(for="email") Email:
        input#email(type="email" name="email" value=formData?.email)
      div
        button(type="submit") Create
